<mvc:View controllerName="ui5.wwwroot.app.Marca.ListaDeMarcas"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
    <Panel
    headerText="{i18n>helloPanelTitle}"
      class="sapUiResponsiveMargin"
      width="auto" 
      expandable="{device>/system/phone}"
		  expanded="{= !${device>/system/phone} }"
      accessibleRole="Region">
      </Panel>
      <Table 
        items="{/}">
        <columns>
          <Column>
            <Text colunaNomeDaMarca="{i18n>colunaNomeDaMarca}" />
</mvc:View>