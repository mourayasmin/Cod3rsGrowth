<mvc:View
	controllerName="ui5.wwwroot.app.Marca.ListaDeMarcas"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false" >
		<content>
	<List 
		items="{modelMarcas>/}"
		growing="true"
			growingThreshold="50"
			includeItemInSelection="true"
			id="idListaDeMarcas"
		  scroll="true">
		<headerToolbar>
				<Toolbar>
					<Title text ="Relação de marcas"/>
					<ToolbarSpacer/>
					<Button
						text="{i18n>textoBotaoAdicionar}"
						class="myCustomButton"/>
					<SearchField 
						search=".onSearch"
						value= "{modeloFiltro>nome}"
						width="40%" 
						id="idSearchField"/>
				</Toolbar>
		</headerToolbar>
			<CustomListItem>
				<HBox>
					<core:Icon size="2rem" src="sap-icon://building" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
						  width="auto">
						<Link text="{modelMarcas>nome}" target="{ProductPicUrl}" press="handlePress"/>
						<Label text="CNPJ: {modelMarcas>cnpj}"/>
						<Label text="ID: {modelMarcas>id}"/>
						<Label text="Fundação: {modelMarcas>dataDeCriacao}"/>
					</VBox>
				</HBox>
			</CustomListItem>
	</List>
		</content>
	</Page>
</mvc:View>