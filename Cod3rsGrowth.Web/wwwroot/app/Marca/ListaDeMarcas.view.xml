<mvc:View
	controllerName="ui5.wwwroot.app.Marca.ListaDeMarcas"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false" >
		<content>
	<List 
		items="{modelMarcas>/}"
		growing="true"
			growingThreshold="50"
			includeItemInSelection="true"
			id="idListaDeMarcas">
		<headerToolbar>
				<Toolbar>
					<Title text="{i18n>tituloListaDeMarcas}"/>
					<ToolbarSpacer/>
		<DateRangeSelection
			width="20%"
			value= "{
                            'type': 'sap.ui.model.type.DateInterval',
                            'formatOptions': {
                                'pattern': 'yyyy-MM-ddTHH:mm:ss'
                            },
                            'parts': [
                                {
                                    'type': 'sap.ui.model.type.Date',
                                    'path': '/start'
                                },
                                {
                                    'type': 'sap.ui.model.type.Date',
                                    'path': '/end'
                                }
                            ]
                        }"
			change="aoMudarFiltroDeData"/>
					<SearchField 
						search="aoPesquisarFiltroDeNome"
						value= "{modeloFiltro>nome}"
						width="40%" 
						id="idSearchField"/>
						<Button
						id="idBotaoAdicionar"
						text="{i18n>textoBotaoAdicionar}"
						class="myCustomButton"
						press= "aoClicarNoBotaoAdicionar"/>
				</Toolbar>
		</headerToolbar>
			<CustomListItem>
				<HBox>
					<core:Icon size="2rem" src="sap-icon://building" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
						  width="auto">
						<Link text="{modelMarcas>nome}" target="" press="aoClicarNaMarca"/>
						<Label text="CNPJ: {path: 'modelMarcas>cnpj', formatter: '.formatter.formatadorDeCNPJ'}" id= "textoCNPJ"/>
						<Label text="ID: {modelMarcas>id}"/>
						<Label text="Fundação: {path: 'modelMarcas>dataDeCriacao',
							type:'sap.ui.model.type.DateTime',
							formatOptions: { 
							source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'
							},
							pattern: 'dd/MM/yyyy'}}"/>
					</VBox>
				</HBox>
			</CustomListItem>
	</List>
		</content>
	</Page>
</mvc:View>