<mvc:View
   controllerName="ui5.wwwroot.app.Marca.AdicionarMarca"
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:form="sap.ui.layout.form"
   xmlns:mdc="sap.ui.mdc"
   xmlns:mvc="sap.ui.core.mvc">
      <Page>
      <customHeader>
         <Toolbar>
            <Button id="botaoVoltarTelaDeAdicionar" type="Back" press="aoClicarNoBotaoDeVoltarNaTelaDeAdicionarMarca"/>
            <Title text="Adicionar marca"/>
            <ToolbarSpacer/>
         <Button
         text="{i18n>textoBotaoCancelarAdicionar}"
         class="myCustomButton"
         press="aoClicarNoBotaoCancelarNaTelaDeAdicionar"/>
         <Button
         text="{i18n>textoBotaoSalvarAdicionar}"
         class="myCustomButton"
         press="aoClicarNoBotaoSalvarNaTelaDeAdicionar"/>
         </Toolbar>
      </customHeader>
      <form:SimpleForm layout="ResponsiveGridLayout"> 
         <form:content>
            <Label text="Nome"/>
            <mdc:Field id="campoNome" valueState="None" value="{path: 'modelMarcas>/nome', type: 'sap.ui.model.type.String'}" valueStateText="O campo de nome deve ser preenchido."/>
            <Label text="E-mail"/>
            <mdc:Field id="campoEmail" value="{path: 'modelMarcas>/email', type: 'sap.ui.model.type.String'}"/>
            <Label text="CNPJ"/>
            <mdc:Field id="campoCNPJ" value="{path: 'modelMarcas>/cnpj', type: 'sap.ui.model.type.String'}"/>
            <Label text="Telefone"/>
            <mdc:Field id="campoTelefone" value="{path: 'modelMarcas>/telefone', type: 'sap.ui.model.type.String'}"/>
            <Label text="Data de criação"/>
            <mdc:Field id="campoDataDeCriacao" value="{path: 'modelMarcas>/dataDeCriacao', type: 'sap.ui.model.type.Date'}"/>
         </form:content>
      </form:SimpleForm>
   </Page>
</mvc:View>